@model IMS.DomainModel.ApplicationClasses.Authentication.ForgotPasswordResetAc

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="rct-session-wrapper">
    <header class="session-header">
        <div class="container">
            <div class="session-logo">
                <a href="/">
                    <img src="~/assets/img/logo-white.png" alt="session-logo" class="img-fluid" width="110" height="35" />
                </a>
            </div>
        </div>
    </header>

    <div class="session-inner-wrapper">
        <div class="container">
            <div class="row row-eq-height">
                <div class="col-sm-7 col-md-7 col-lg-8 mx-auto">
                    <div class="session-body text-center">
                        <div class="session-head mb-30">
                            <h2 class="font-weight-bold">Reset Password</h2>
                        </div>
                        <div>
                            @using (Html.BeginForm())
                            {
                                <div class="has-wrapper form-group text-left">
                                    @Html.HiddenFor(u => u.UserId)
                                </div>

                                <div class="has-wrapper form-group text-left">
                                    @Html.HiddenFor(u => u.PasswordGenerationToken)
                                </div>

                                <div class="has-wrapper form-group text-left">
                                    @Html.PasswordFor(u => u.Password, htmlAttributes: new { @class = "has-input input-lg form-control", required = "required", placeholder = "Enter Password", autofocus = "autofocus" })
                                    <span class="has-icon"><i class="ti-email"></i></span>
                                    @Html.ValidationMessageFor(u => u.Password)
                                </div>

                                <div class="has-wrapper form-group text-left">
                                    @Html.PasswordFor(u => u.ConfirmPassword, htmlAttributes: new { @class = "has-input input-lg form-control", required = "required", placeholder = "Confirm Password", autofocus = "autofocus" })
                                    <span class="has-icon"><i class="ti-email"></i></span>
                                    @Html.ValidationMessageFor(u => u.ConfirmPassword)
                                </div>

                                <div class="mb-15 form-group">
                                    <button class="btn btn-primary btn-lg btn-block text-white w-100" tabindex="0" type="submit">
                                        Reset Password
                                    </button>
                                </div>
                            }
                        </div>

                        <p class="mb-0"><a href="/Home/LogIn" class="text-muted">Sign In</a></p>
                        <p class="mb-0"><a target="_blank" href="#/terms-condition" class="text-muted">Terms of Service</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>